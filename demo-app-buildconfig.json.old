{
   "kind": "BuildConfig",
   "apiVersion": "v1",
   "metadata": {
      "name": "demo-app-sti-build"
   },
   "spec": {
      "triggers": [
         {
            "type": "ConfigChange"
         }
      ],
      "source": {
         "type": "Git",
         "git": {
            "uri": "git://github.com/openshift/charliemaiors/demo-app-xsp.git"
         }
      },
      "strategy": {
         "type": "Source",
         "sourceStrategy": {
            "from": {
               "kind": "ImageStreamTag",
	       "name": "flaviomu/app-builder:v1"
            },
	    "forcePull": true
         }
      },
      "output": {
         "to": {
            "kind": "ImageStreamTag",
            "name": "flaviomu/demo-app-sti:v1"
         }
      }
   }
}
